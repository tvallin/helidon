<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">
    <methods>
        <method name="output">
            <output>
                <file source="files/.dockerignore" target=".dockerignore"/>
                <template source="files/Dockerfile.mustache" target="Dockerfile" engine="mustache"/>
                <model>
                    <list key="poms" if="!${multi-module}">
                        <value>ADD pom.xml .</value>
                    </list>
                    <list key="src-dirs" if="!${multi-module}">
                        <value>ADD src src</value>
                    </list>
                    <list key="readme-sections">
                        <value order="50" template="mustache" file="files/README.md.mustache"/>
                    </list>
                </model>
            </output>
        </method>
    </methods>
    <call method="output"/>
    <exec src="/features/native-image/output.xml" if="${docker.native-image}"/>
    <exec src="/features/jlink/output.xml" if="${docker.jlink}"/>
</archetype-script>
